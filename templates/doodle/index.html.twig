{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-sm">
            <div class="form-group">
                <div class="btn-container">
                    <button type="button" class="btn btn-artflow" id="refresh-doodle">{{ 'Refresh Doodle'|trans }}</button>
                    <button type="button" class="btn btn-artflow" id="clear-sketchbook">{{ 'Clear drawing area'|trans }}</button>
                    <a href="#" class="btn btn-artflow" id="download-image" download="artflow.png" target="_blank">{{ 'Download image'|trans }}</a>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                            <input type="radio" name="tool" id="pencil" checked> {{ 'Pencil'|trans }}
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="tool" id="eraser"> {{ 'Eraser'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="opacity">{{ 'Opacity'|trans }}</label>
                <input type="range" class="custom-range" id="opacity" min="0" max="255">
            </div>
            <div class="form-group">
                <label for="size">{{ 'Size'|trans }}</label>
                <input type="range" class="custom-range" id="size" min="1" max="20" value="1">
            </div>
        </div>
        <div class="col-sm">
            <div class="canvas-container" >
                <canvas class="canvas-bottom" id="doodle-sketchbook"></canvas>
                <canvas class="canvas-top" id="sketchbook"></canvas>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block pagejavascripts %}
    {{ encore_entry_script_tags('doodle_sketchbook') }}
{% endblock %}
