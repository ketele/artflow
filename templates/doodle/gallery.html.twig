{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row mt-4">
            <h6>{{ 'Gallery'|trans }}</h6>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-sm">
                <div class="card-deck">
                    {% for doodle in doodles %}
                        {% if (loop.index - 1) % 3 == 0 %}
                </div>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-sm">
                <div class="card-deck">
                        {% endif %}
                        <div class="card">
                            <img src="/img/doodle{{ doodle.url }}" class="card-img-top" alt="{{ doodle.userName }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ doodle.userName }}</h5>
                                <p class="card-text">{{ doodle.description|slice(0, 200) }}</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">{{ doodle.createdAt|date('Y-m-d') }}</small>
                                <a href="{{ path('doodle_view', {id: doodle.id}) }}" class="btn btn-secondary float-right">{{ 'Details'|trans }}</a>
                            </div>
                        </div>
                    {% endfor %}
                    {% if (doodles|length) % 3 == 1 %}
                    <div class="card">
                    </div>
                        <div class="card">
                        </div>
                    {% elseif (doodles|length) % 3 == 2 %}
                    <div class="card">
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
