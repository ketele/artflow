{% extends 'admin/base.html.twig' %}

{% block leftmenu %}
    <ul class="nav flex-column">
        <li class="nav-item">
            {{ 'Month' }}
            <ul class="nav flex-column">
                {% for m_val in months %}
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('year') == m_val|date("Y") and app.request.get('month') == m_val|date("m") %}active{% endif %}"
                       href="{{ path('temp_files', {year: m_val|date("Y"),month : m_val|date("m")}) }}">
                        {{ m_val|date("Y") }}-{{ m_val|date("m") }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row mt-4">
            <div class="col-sm">
                <h6>{{ 'Gallery'|upper }}</h6>
                <button class="btn btn-danger float-right"
                   data-toggle="modal"
                   data-target="#delete-temp-files-modal">
                    {{ "Delete temp files from" }} {{ year }}-{{ month }}
                </button>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-sm">
                <div class="card-deck">
                    {% for file in files %}
                    {% if (loop.index - 1) % 3 == 0 %}
                </div>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-sm">
                <div class="card-deck">
                    {% endif %}
                    <div class="card image-card">
                        <a href="#" class="">
                            <img src="/temp_img/doodle{{ file.url }}" class="card-img-top" alt="{{ file.url }}">
                        </a>
                        <div class="image-card-info">
                            <div class="opacity-0 image-card-overlay">
                            </div>
                            <div class="opacity-0 image-card-description">
                                <p>
                                    <a href="/temp_img/doodle{{ file.url }}" class="">
                                        {{ file.url }}
                                    </a>
                                </p>
                                <p>
                                    <a href="/temp_img/doodle{{ file.url }}" class="">
                                        {{ file.modifiedDate|date("Y-m-d") }}
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    {% if (files|length) % 3 == 1 %}
                        <div class="card">
                        </div>
                        <div class="card">
                        </div>
                    {% elseif (files|length) % 3 == 2 %}
                        <div class="card">
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="delete-temp-files-modal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-temp-files-modal-title">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="delete-temp-files-modal-error" class="alert alert-danger d-none" role="alert">
                        A simple danger alertâ€”check it out!
                    </div>
                    Are you sure you want to delete temp files from month {{ year }}-{{ month }}?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a class="btn btn-primary" id="delete-temp-files" data-year="{{ year }}" data-month="{{ month }}">
                        Yes
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejavascripts %}
    {{ encore_entry_script_tags('temp_files') }}
{% endblock %}