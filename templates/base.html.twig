<!doctype html>
<html lang="en" class="h-100">
    <head>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-SXKFF6NS26"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-SXKFF6NS26');
        </script>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block metadescription %}
            <meta name="description" content="{{ "Daily exercise improves your artistic skills"|trans }}">
        {% endblock %}
        {% block metakeywords %}
            <meta name="keywords" content="{{ "art block"|trans }},{{ "art warm up"|trans }}">
        {% endblock %}
        <meta name="robots" content="index,follow">

        <title>{% block title %}{{ controller_name|trans }} &#x2027; {{ page_name }}{% endblock %}</title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <header class="header">

            <nav class="navbar navbar-expand-lg navbar-light bg-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <h5 class="my-0 mr-md-auto font-weight-normal">
                        <a href="{{ path('home') }}" class="navbar-brand">ART<strong>FLOW</strong></a>
                    </h5>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item {% if app.request.get('_route') == 'home' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('home') }}">{{ 'Home'|trans }} <span class="sr-only"></span></a>
                            </li>
                            <!--li class="nav-item {% if app.request.get('_route') == 'news' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('news') }}">{{ 'News'|trans }}</a>
                            </li-->
                            <li class="nav-item {% if app.request.get('_route') == 'doodle' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('doodle') }}">{{ 'Doodle'|trans }}</a>
                            </li>
                            <li class="nav-item {% if app.request.get('_route') == 'doodle_gallery' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('doodle_gallery') }}">{{ 'Gallery'|trans }}</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ 'Language'|trans }}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('home', {_locale: 'en'}) }}"> English</a>
                                    <a class="dropdown-item" href="{{ path('home', {_locale: 'pl'}) }}"> Polski</a>
                                </div>
                            </li>
                        </ul>
                        <div class="d-flex">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <span class="navbar-text">
                                    <a href="{{ path('user', {username: app.user.username}) }}">{{ app.user.username }}</a>
                                </span>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_logout') }}" type="button" class="btn">{{ 'Logout'|trans }}</a>
                                </div>
                            {% else %}
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_login') }}" type="button" class="btn">{{ 'Login'|trans }}</a>
                                    <a href="{{ path('app_register') }}" type="button" class="btn">{{ 'Registration'|trans }}</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            <div class="row flex-xl-nowrap">
                <div class="col-md-2 col-xl-2 bd-sidebar pt-5">
                        {% block leftmenu %}{% endblock %}
                </div>
                <nav class="d-none d-xl-block col-xl-2 bd-toc" aria-label="Secondary navigation">
                    {% block rightmenu %}{% endblock %}
                </nav>
                <main role="main" class="col-md-8 col-xl-8">
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>

        <footer class="footer mt-auto py-3">
            <div class="container">
                <a href="{{ path('home') }}">
                    <span class="text-muted">ART<strong>FLOW</strong></span>
                </a>
            </div>
        </footer>

        <div class="loading-overlay">
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-light" role="status">
                </div>
            </div>
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        {% block pagejavascripts %}
        {% endblock %}
    </body>
</html>
